<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.work.dao.CommentDao">

    <resultMap id="commentMap" type="com.work.model.Comment">
        <id property="orderId" column="order_id"/>
        <result property="commentScore" column="comment_score" />
        <result property="commentDesc" column="comment_desc" />
    </resultMap>

    <select id="findCommentById" parameterType="String" resultMap="commentMap">
        SELECT c.*
        FROM comment c
        WHERE c.order_id = #{orderId}
    </select>

    <insert id="addComment" parameterType="Comment" >
        INSERT INTO comment
        (order_id,comment_score,comment_desc)
        values
        (#{orderId},#{commentScore},#{commentDesc})
    </insert>

    <update id="updateComment" parameterType="Comment">
        UPDATE comment
        <trim prefix="set" suffixOverrides=",">
            <if test="commentScore != null">comment_score=#{commentScore},</if>
            <if test="commentDesc != null">comment_desc=#{commentDesc},</if>
        </trim>
        WHERE order_id = #{orderId}
    </update>

</mapper>